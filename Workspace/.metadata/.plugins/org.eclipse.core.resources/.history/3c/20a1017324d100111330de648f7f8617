mongoose = require('mongoose')
Schema = mongoose.Schema
ObjectId = Schema.ObjectId

AuthTokenSchemaInternal = 
	token: 
		type: String
		required: true
		unique: true
	expiresOn:
		type: Date
		required: true
	user: 
		type: ObjectId
		ref: 'users'
		required: true

UserSchema = new Schema(UserSchemaInternal)
module.exports = UserSchema
	