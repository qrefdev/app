mongoose = require('mongoose')
Schema = mongoose.Schema
ObjectId = Schema.ObjectId

###
@author Nathan Klick
@copyright QRef 2012
@abstract
###
class AuthTokenSchemaInternal 
	token: 
		type: String
		required: true
		unique: true
	expiresOn:
		type: Date
		required: true
	user: 
		type: ObjectId
		ref: 'users'
		required: true

AuthTokenSchema = new Schema(new AuthTokenSchemaInternal())
module.exports = AuthTokenSchema
	