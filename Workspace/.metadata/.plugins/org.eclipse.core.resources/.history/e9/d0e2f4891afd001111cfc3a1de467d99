mongoose = require('mongoose')
Schema = mongoose.Schema
ObjectId = Schema.ObjectId

###
@author Nathan Klick
@copyright QRef 2012
###
class AircraftChecklistItemSchemaInternal
	###
	@property [String] relative path to the image from the root of the server
	@abstract Mandatory Field
	### 
	icon:
		type: String
		required: false
	###
	@property [Number] a numerical index indicating the order of the element
	@abstract Mandatory Field
	###
	index:
		type: Number
		required: true
	###
	@property [String] the item's check value
	@abstract Mandatory Field
	###
	check: 
		type: String
		required: true
	###
	@property [String] the item's response value
	@abstract Mandatory Field
	### 
	response:
		type: String
		required: true

AircraftChecklistItemSchema = new Schema(new AircraftChecklistItemSchemaInternal())
module.exports = AircraftChecklistItemSchema